{
  "wiki_api": {
    "base_url": "http://mcwiki.rice-awa.top",
    "timeout": 30,
    "max_retries": 3,
    "default_format": "both",
    "default_limit": 10,
    "max_batch_size": 20,
    "max_concurrency": 5
  },
  "mcp_server": {
    "name": "Minecraft Wiki MCP",
    "description": "MCP服务器，提供Minecraft Wiki内容访问工具，支持搜索、页面获取和批量处理功能",
    "version": "1.0.0",
    "host": "0.0.0.0",
    "port": 8000
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "cache": {
    "enabled": true,
    "default_use_cache": true
  },
  "metadata": {
    "author": "Minecraft Wiki MCP Team",
    "license": "CC BY-NC-SA 3.0",
    "source": "中文 Minecraft Wiki (https://zh.minecraft.wiki)",
    "copyright_notice": "本工具获取的所有内容均来自中文Minecraft Wiki，遵循CC BY-NC-SA 3.0协议"
  }
}